@model BO.Category

@{
    ViewBag.Title = "CreateCategories";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>CreateCategories</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Category</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            
            <div class="col-md-10">
                @Html.LabelFor(model => model.category_name, new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.category_name)
                @Html.ValidationMessageFor(model => model.category_name)
            </div>
        </div>

        <div class="form-group">
           
            <div class="col-md-10">
                @Html.LabelFor(model => model.status, new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.status)
                @Html.ValidationMessageFor(model => model.status)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
    @ViewBag.Message
}

